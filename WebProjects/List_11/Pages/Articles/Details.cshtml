@page "{id}"
@model List_11.Pages.Articles.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Article</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Article.EAN13)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Article.EAN13)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Article.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Article.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Article.Price)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Article.Price)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Article.ImagePath)
        </dt>
        <dd class="col-sm-10">
            @if (Model.Article.ImagePath != null)
            {
                <img src="@(Url.Content(Model.Article.ImagePath))" alt="Uploaded Image" />
            }
            else
            {
                <img src="~/image/no_image.png" alt="No-image Image" />
            }
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Article.Category)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Article.Category.Name)
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Article.Id">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
